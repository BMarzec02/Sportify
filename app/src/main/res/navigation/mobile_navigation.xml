<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.sportify.ui.training.TrainingFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_training" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.sportify.ui.activities.ActivitiesFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_activities" />

    <fragment
        android:id="@+id/navigation_statistics"
        android:name="com.example.sportify.ui.statistics.StatisticsFragment"
        android:label="@string/title_statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.sportify.ui.map.MapFragment"
        android:label="Mapa trasy"
        tools:layout="@layout/fragment_map">
        <argument
            android:name="gpxPath"
            app:argType="string" />
    </fragment>
</navigation>

